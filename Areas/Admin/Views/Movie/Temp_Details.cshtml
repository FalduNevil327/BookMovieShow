@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<main class="main" id="main">

    @{
        string title = "Salaar";
        string description = "This is a sample movie description.";
        int duration = 180;
        string language = "Hindi";
        string genre = "Action";
        string director = "Sample Director";
        string rating = "4.5";
        DateTime? releaseDate = new DateTime(2023, 12, 31);
        string posterImageURL = "https://via.placeholder.com/300x450";
        string trailerURL = "https://www.youtube.com/watch?v=sample";
    }

    <h1 class="mt-4">Movie Details</h1>

    <div class="card">
        <div class="card-body">
             <img src="~/assets/img/Reco_movie-1.jpg" class="card-img-top p-2" alt="Poster" style="max-width: 300px;" />
            <p class="mt-3">Trailer URL: <a href="@trailerURL" target="_blank">@trailerURL</a></p>
            <h2 class="card-title">@title</h2>
            <p class="card-text">Description: @description</p>
            <p class="card-text">Duration: @duration minutes</p>
            <p class="card-text">Language: @language</p>
            <p class="card-text">Genre: @genre</p>
            <p class="card-text">Director: @director</p>
            <p class="card-text">Rating: @rating</p>

            @if (releaseDate.HasValue)
            {
                <p class="card-text">Release Date: @releaseDate.Value.ToString("yyyy-MM-dd")</p>
            }
            else
            {
                <p class="card-text">Release Date: Not Available</p>
            }

            <div class="container-fluid d-flex justify-content-between p-0">
                <a asp-area="Admin" asp-controller="Admin" asp-action="MST_MovieAdd" class="btn btn-primary">Edit</a>
        </div>
    </div>

    <a asp-area="Admin" asp-controller="Admin" asp-action="MST_MovieList" class="btn btn-primary mt-3">Back to Movie List</a>

</main>