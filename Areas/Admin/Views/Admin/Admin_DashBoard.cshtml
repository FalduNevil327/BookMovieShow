@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Home Page";
}

@using BookMovieShow.Models;
@using System.Data;
@model DataTable;


@* <main class="main" id="main">
    <a class="" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-left"></i></a>
    <h1>Admin DashBoard</h1>
</main> *@

<main id="main" class="main">

    <!--Heading-->
    <div class="pagetitle">
        <a class="" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-arrow-left"></i></a>
        <h3 class="title">Admin Dashboard</h3>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <!--Heading-->
    <!--Start DashBoard-->
    <section class="section dashboard">
        <div class="row">

            <!-- Left side columns -->
            <div class="col-lg-12">
                <div class="row">

                    <!-- User -->
                    <div class="col-xxl-4 col-md-12">
                        <div class="card info-card sales-card">
                            <a asp-area="Admin" asp-controller="SEC_User" asp-action="SEC_UserList">
                                <div class="card-body">
                                    <h5 class="card-title">User</h5>

                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-person-circle"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h5 class="mb-0">@Model.Rows[0]["UserCount"]</h5>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <!-- End Cinema -->
                    <!-- Cinema -->
                    <div class="col-xxl-4 col-md-3">
                        <div class="card info-card sales-card">
                            <a asp-area="Admin" asp-controller="Cinema" asp-action="MST_CinemaList">
                                <div class="card-body">
                                    <h5 class="card-title">Cinema</h5>

                                    <div class="d-flex align-items-center">
                                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                            <i class="bi bi-house-door"></i>
                                        </div>
                                        <div class="ps-3">
                                            <h5 class="mb-0">@Model.Rows[0]["CinemaCount"]</h5>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <!-- End Cinema -->
                    <!-- Movie -->
                    <div class="col-xxl-4 col-md-3">
                        <div class="card info-card sales-card">

                            <div class="card-body">
                                <h5 class="card-title">Movie</h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-camera-reels"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h5 class="mb-0">@Model.Rows[0]["MovieCount"]</h5>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- End Movie -->
                    <!-- State -->
                    <div class="col-xxl-4 col-md-3">
                        <div class="card info-card sales-card">

                            <div class="card-body">
                                <h5 class="card-title">State</h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-geo"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h5 class="mb-0">@Model.Rows[0]["StateCount"]</h5>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- End State -->
                    <!-- City -->
                    <div class="col-xxl-4 col-md-3">
                        <div class="card info-card sales-card">

                            <div class="card-body">
                                <h5 class="card-title">City</h5>

                                <div class="d-flex align-items-center">
                                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                        <i class="bi bi-compass"></i>
                                    </div>
                                    <div class="ps-3">
                                        <h5 class="mb-0">@Model.Rows[0]["CityCount"]</h5>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- End City -->
                </div>
            </div><!-- End Left side columns -->
        </div>
    </section>
    <!--Start DashBoard-->

</main>
<!-- End #main -->
