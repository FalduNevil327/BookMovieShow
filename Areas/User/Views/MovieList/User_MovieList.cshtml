@{
    ViewData["Title"] = "Movie List";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}
@using System.Data
@model DataTable

<!-- Banner-Section -->
<section class="banner-section">
    <div class="banner-bg bg_img bg-fixed" data-background=@Url.Content("~/assets2/images/banner/banner02.jpg")></div>
    <div class="container">
        <div class="banner-content">
            <h1 class="title bold">get <span class="color-theme">movie</span> tickets</h1>
            <p>Buy movie tickets in advance, find movie times watch trailer, read movie reviews and much more</p>
        </div>
    </div>
</section>
<!-- Banner-Section -->
<!-- Movie-Search -->
<section class="search-ticket-section padding-top pt-lg-0">
    <div class="container">
        <div class="search-tab bg_img" data-background=@Url.Content("~/assets2/images/ticket/ticket-bg01.jpg")>
            <div class="row align-items-center mb--20">
                <div class="col-lg-6 mb-20">
                    <div class="search-ticket-header">
                        <h6 class="category">welcome to BookMovieShow </h6>
                        <h3 class="title">what are you looking for</h3>
                    </div>
                </div>
                <div class="col-lg-6 mb-20">
                    <ul class="tab-menu ticket-tab-menu">
                        <li class="active">
                            <div class="tab-thumb">
                                <img src="~/assets2/images/ticket/ticket-tab01.png" alt="ticket">
                            </div>
                            <span>Movie</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="tab-area">
                <div class="tab-item active">
                    <form class="ticket-search-form" asp-area="User" asp-controller="MovieList" asp-action="MovieListByCity">
                        <div class="form-group large">
                            <input type="text" placeholder="Search for Movies">
                            <button type="submit"><i class="fas fa-search"></i></button>
                        </div>
                        <div class="form-group">
                            <div class="thumb">
                                <img src="~/assets2/images/ticket/city.png" alt="State">
                            </div>
                            <span class="type">State</span>
                            <select class="select-bar" name="StateID" onchange="fnOnStateChange();" asp-items="@(new SelectList(ViewBag.StateList,"StateID","StateName"))">
                                <option>Select State</option>
                            </select>
                        </div> <!--State DropDown-->
                        <div class="form-group">
                            <div class="thumb">
                                <img src="~/assets2/images/ticket/city.png" alt="City">
                            </div>
                            <span class="type">city</span>
                            <select class="select-bar" name="CityID" onchange="fnOnCityChange();" asp-items="@(new SelectList(ViewBag.CityList,"CityID","CityName"))">
                                <option>Select City</option>
                            </select>
                        </div> <!--City DropDown-->
                        <div class="form-group">
                            <div class="thumb">
                                <img src="~/assets2/images/ticket/cinema.png" alt="Cinema">
                            </div>
                            <span class="type">cinema</span>
                            <select class="select-bar" name="CinemaID" asp-items="@(new SelectList(ViewBag.CinemaList,"CinemaID","CinemaName"))">
                                <option>Select Cinema</option>
                            </select>
                        </div> <!--Cinema DropDown-->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Movie-Search -->
<!-- Movie-Section -->
