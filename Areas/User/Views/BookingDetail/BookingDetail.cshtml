@{
    ViewData["Title"] = "BookingDetail Page";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}
@model BookMovieShow.Areas.User.Model.BookingDetailModel

<!-- ==========Banner-Section========== -->
<section class="details-banner hero-area bg_img seat-plan-banner" data-background="@Url.Content("~/assets2/images/banner/banner04.jpg")">
    <div class="container">
        <div class="details-banner-wrapper">
            <div class="details-banner-content style-two">
                <h3 class="title">@Model.Title</h3>
                <div class="tags">
                    <a href="#0">@Model.Genre</a>
                    <a href="#0">@Model.Language</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ==========Banner-Section========== -->
<!-- ==========Page-Title========== -->
<section class="page-title bg-one">
    <div class="container">
        <div class="page-title-area">
            <div class="item md-order-1">
                <a href="movie-ticket-plan.html" class="custom-button back-button">
                    <i class="flaticon-double-right-arrows-angles"></i>back
                </a>
            </div>
            <div class="item date-item">
                <span class="date">@Model.Showtime.ToString("HH:mm")</span>
            </div>
            <div class="item">
                <h5 class="title">05:00</h5>
                <p>Mins Left</p>
            </div>
        </div>
    </div>
</section>
<!-- ==========Page-Title========== -->
<!-- ==========Movie-Section========== -->
<div class="movie-facility padding-bottom padding-top">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
            </div>

            <!-- Booking Summary Section -->
            <div class="col-lg-4">
                <div class="booking-summery bg-one">
                    <h4 class="title">Booking Summary</h4>
                    <ul>
                        <li>
                            <h6 class="subtitle">@Model.Title</h6>
                            <span class="info">@Model.Language-@Model.Genre</span>
                        </li>
                        <li>
                            <h6 class="subtitle"><span>@Model.CinemaName</span><span>@Model.NumberOfTickets</span></h6>
                            <div class="info"><span>@Model.BookingDate , @Model.Showtime</span> <span>Tickets</span></div>
                        </li>
                        <li>
                            <h6 class="subtitle mb-0"><span>Tickets Price</span><span>@Model.price</span></h6>
                        </li>
                    </ul>
                    <ul class="side-shape">
                        <li>
                            <h6 class="subtitle"><span>Combos</span><span>$57</span></h6>
                            <span class="info"><span>2 Nachos Combo</span></span>
                        </li>
                        <li>
                            <h6 class="subtitle"><span>Food & Beverage</span></h6>
                        </li>
                    </ul>
                    <ul>
                        <li>
                            <span class="info"><span>Price</span><span>@Model.price</span></span>
                            <span class="info"><span>VAT</span><span>Rs. 55</span></span>
                        </li>
                    </ul>
                </div>
                <div class="proceed-area text-center">
                    <h6 class="subtitle"><span>Amount Payable</span><span>@Model.TotalAmount</span></h6>
                    <a asp-area="User" asp-controller="Payment" asp-action="Payment" class="custom-button back-button">Proceed</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ==========Movie-Section========== -->
